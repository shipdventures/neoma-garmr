{
  "name": "neoma-garmr",
  "engines": {
    "node": ">=22.0.0"
  },
  "version": "0.3.3",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p ./libs/garmr/tsconfig.lib.json && npm run build:schematics",
    "build:schematics": "cp -r ./libs/garmr/src/schematics/auth/files ./libs/garmr/dist/schematics/auth/ && cp ./libs/garmr/src/schematics/collection.json ./libs/garmr/dist/schematics/ && cp ./libs/garmr/src/schematics/auth/schema.json ./libs/garmr/dist/schematics/auth/",
    "lint": "eslint .",
    "test": "node node_modules/.bin/jest --watch --runInBand",
    "test:e2e": "NEOMA_MANAGED_APP_MODULE_PATH=src/app.module.ts#AppModule node node_modules/.bin/jest --config ./specs/jest-e2e.json --watch --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.3",
    "jsonwebtoken": "^9.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^10.2.0",
    "@neoma/managed-app": "^0.3.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.13",
    "@types/node": "^25.0.9",
    "@types/supertest": "^6.0.2",
    "class-transformer": "^0.5.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "lodash": "^4.17.21",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/fixtures/matchers/index.js"
    ],
    "moduleNameMapper": {
      "fixtures/(.*)$": "<rootDir>/fixtures/$1",
      "@lib/(.*)$": "<rootDir>/libs/garmr/src/$1",
      "@lib": "<rootDir>/libs/garmr/src"
    }
  }
}
