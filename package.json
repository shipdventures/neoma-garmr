{
  "name": "neoma-garmr",
  "engines": {
    "node": ">=22.0.0"
  },
  "version": "0.3.3",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p ./libs/garmr/tsconfig.lib.json",
    "lint": "eslint .",
    "test": "node --env-file=.env.spec node_modules/.bin/jest --watch --runInBand",
    "test:e2e": "node --env-file=.env.e2e node_modules/.bin/jest --config ./specs/jest-e2e.json --watch --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.13",
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.3",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@faker-js/faker": "^10.2.0",
    "@neoma/managed-app": "^0.3.0",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.13",
    "@nestjs/typeorm": "^11.0.0",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.0",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.2",
    "class-transformer": "^0.5.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.0.0",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "lodash": "^4.17.23",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.28",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "globalSetup": "<rootDir>/fixtures/specs/global-setup.ts",
    "globalTeardown": "<rootDir>/fixtures/specs/global-teardown.ts",
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/fixtures/matchers/index.js"
    ],
    "moduleNameMapper": {
      "fixtures/(.*)$": "<rootDir>/fixtures/$1",
      "@lib/(.*)$": "<rootDir>/libs/garmr/src/$1",
      "@lib": "<rootDir>/libs/garmr/src"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@faker-js/faker)"
    ]
  }
}
