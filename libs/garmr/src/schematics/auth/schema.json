{
  "$schema": "http://json-schema.org/schema",
  "$id": "GarmrAuthSchematic",
  "title": "Garmr Auth Schematic Options",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "format": "path",
      "description": "The path to create the auth module.",
      "default": "src",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "mode": {
      "type": "string",
      "description": "The output mode for controllers.",
      "default": "api",
      "enum": ["api", "html"]
    }
  }
}
